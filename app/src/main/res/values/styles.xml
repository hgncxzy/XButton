<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="xButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- outlined button（线框按钮）↓ -->
    <style name="xButton.Outlined">
        <item name="android:background">@drawable/btn_outlined_radius_3_selector</item>
        <item name="android:textColor">@color/btn_outlined_text_selector</item>
    </style>

    <!--     outlined button（线框按钮）↓ -->
    <style name="xButton.Outlined.288w">
        <item name="android:layout_width">@dimen/dp_288</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:background">@drawable/btn_outlined_radius_3_selector</item>
        <item name="android:textSize">@dimen/dp_18</item>
    </style>


    <!-- contained button（实心按钮）↓ -->
    <style name="xButton.Contained">
        <item name="android:background">@drawable/btn_contained_radius_3_selector</item>
        <item name="android:textColor">@color/btn_contained_text_selector</item>
    </style>

    <style name="xButton.Contained.328w">
        <item name="android:layout_width">@dimen/dp_328</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/btn_contained_radius_3_selector</item>
        <item name="android:textSize">@dimen/dp_18</item>
    </style>


    <!-- text button（文本按钮）↓ -->
    <style name="xButton.Text">
        <item name="android:textColor">@color/btn_text_text_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_light2</item>
    </style>






</resources>
