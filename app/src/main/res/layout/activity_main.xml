<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button

            style="@style/xButton.Contained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="自适应宽高的实心按钮"
            android:textAllCaps="false" />

        <Button
            style="@style/xButton.Contained.328w"
            android:layout_margin="10dp"
            android:text="固定宽高的实心按钮"
            android:textAllCaps="false" />

        <Button
            style="@style/xButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="自适应宽高的线框按钮"
            android:textAllCaps="false" />

        <Button
            style="@style/xButton.Outlined.288w"
            android:layout_margin="10dp"
            android:text="固定宽高的线框按钮"
            android:textAllCaps="false" />

        <Button
            style="@style/xButton.Text"
            android:layout_margin="10dp"
            android:text="自适应宽高的文本按钮"
            android:textAllCaps="false" />

        <Button
            style="@style/xButton.Text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="固定宽高的文本按钮"
            android:textAllCaps="false" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="圆形按钮" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_corners_bg"
            android:gravity="center"
            android:text="设置圆角属性的按钮"
            android:textAllCaps="false" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_gradient_bg"
            android:gravity="center"
            android:text="使用了渐变属性的按钮"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_size_bg"
            android:gravity="center"
            android:text="使用shape的size属性设置尺寸的按钮"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_stroke_bg"
            android:gravity="center"
            android:text="设置了描边属性的按钮"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_padding_bg"
            android:gravity="center"
            android:text="设置了间隔属性的按钮"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_element_backup"
            android:gravity="center"
            android:text="设置了shape 属性组合效果的的按钮"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>